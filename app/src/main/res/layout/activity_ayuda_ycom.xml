<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AyudaYcomActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información y Ayuda"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitulo"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido a la aplicación Notes De Vie."
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrucciones:"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Inicia sesión para comenzar a crear proyectos."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Crea proyectos para escribir tus actividades diarias."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Organiza tus proyectos en carpetas si lo deseas."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/etComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tu comentario aquí"
                android:inputType="textMultiLine"
                android:lines="5"
                android:layout_below="@id/tvTitulo"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnEnviarComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etComentario"
                android:layout_centerHorizontal="true"
                android:text="Enviar Comentario" />

            <!-- Agrega más instrucciones según sea necesario -->

        </LinearLayout>
    </ScrollView>

    <!-- Sección de comentarios al final de toda la información -->

</RelativeLayout>